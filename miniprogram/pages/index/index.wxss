/**index.wxss**/
@import "/colorui/animation.wxss";

image[class*="gif-"] {
    /* border-radius: 6rpx; */
    display: block;
    border: none;
}

.top {
    height: 120rpx;
    margin-top: -30rpx;
    /* background-image: "http://wx4.sinaimg.cn/mw690/006UdlVNgy1g2v2t1ih8jj31hc0p0qej.jpg"; */
    background: #E9E9E9;
}

.avatar {
    display: inline-block;
    width: 80rpx;
    margin-top: 15rpx;
    margin-left: 10rpx;
    height: 80rpx;
    border-radius: 50%;
}

.word {
    display: inline-block;
    margin-left: 15rpx;
}

.action {
    display: inline-block;
}

 .box {
    position: relative;
    display: inline-block;
    height: 65rpx;
    width: 400rpx;
    left: 32%;
    top: -138rpx;
    /* background-color: #f5f5f5; */
    /* border-radius: 50px;
    color: #999; */
}

.box image {
    display: inline-block;
    margin-left: 30rpx;
    margin-right: 15rpx;
    width: 28rpx;
    height: 28rpx;
    margin-bottom: -5rpx;
}

.box text {
    font-size: 26rpx;
    line-height: 65rpx;
} 

.online {
    position: relative;
    display: inline-block;
    height: 100rpx;
    width: 100rpx;
    /* background: red; */
    left: 33%;
    top: -110rpx;
    font-size: 28rpx;
    z-index: 999;
}

.online image {
    display: inline-block;
    width: 100rpx;
    height: 100rpx;
}

.text-xl {
    text-align: center;
    padding-top: 10%;
}

.page__bd {
    padding-bottom: 10px;
}

#launchTime {
    color: #ccc;
    font-size: 14px;
}

.weui-media-box__thumb {
    border: 1rpx solid whitesmoke;
    border-radius: 50%;
}

.allTag {
    display: block;
    clear: both;
    overflow: hidden;
}

.placeholder {
    margin: 5px 20px 2px 5px;
    margin-top: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: white;
    height: 1.5em;
    line-height: 1.5em;
    color: #333;
    border: 1px solid #97b2ff;
    float: left;
    border-radius: 30rpx;
    font-size: 12px;
}

.weui-grid__icon {
    width: 220rpx;
    height: 220rpx;
}

.location {
    float: left;
    font-size: 12px;
    margin-top: 10px;
    display: block;
}

.message {
    float: right;
    font-size: 12px;
    margin-left: 20px;
    margin-top: 10px;
}

.location image {
    width: 16px;
    height: 16px;
}

#firstList {
    margin-top: -15px;
    border: none;
}

#Loading {
    position: fixed;
    top: 40vh;
    left: 0;
    right: 0;
    z-index: 1000;
}

.weui-panel:before, .weui-panel:after {
    top: 0;
    border: none;
}
